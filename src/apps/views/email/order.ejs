<!DOCTYPE html
     PUBLIC "-//W3C//DTD XHTML 1.0 Transitional //EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xmlns:o="urn:schemas-microsoft-com:office:office"
     xmlns:v="urn:schemas-microsoft-com:vml">

<head>

     <style>
          table,
          th {
               border: 1px solid black;
          }

          table {
               background-color: #AAD373;
               width: 100%;
               font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
               border-collapse: collapse;

          }

          th {
               font-size: 1.1em;
               text-align: center;
               padding-top: 5px;
               padding-bottom: 5px;
               padding-right: 7px;
               padding-left: 7px;
               background-color: #A7C942;
               color: #ffffff;
          }

          td {
               text-align: center;
               font-size: 1em;
               border: 1px solid #98bf21;
               padding: 5px 5px 5px 5px;
          }

          #left {
               float: left;
               background: pink;
          }

          #right {
               float: right;
               background: cyan;
          }

          h2 {
               text-align: center;
               color: royalblue;
          }

          tr {
               color: #F00000;
               background-color: #EAF2D3;
          }
     </style>
</head>

<body class="clean-body">
     <h2>THÔNG TIN MUA HÀNG</h2>
     <div>
          <div id="left">
               <% var today = new Date()%>
               <% var date = today.getDate()+'-'+(today.getMonth()+1)+'-'+today.getFullYear(); %>
               <h3>Ngày đặt hàng: <%=date%> </h3>
          </div>
          <div id="right">
               <h3>Khách hàng: <%=name%></h3>
               <p>Địa chỉ: <%=add%></p>
          </div>
     </div>

     <table>
          <tr>
               <th>Tên sản phẩm</th>
               <th>Phụ kiện</th>
               <th>Số lượng</th>
               <th>Đơn giá</th>
          </tr>
          <%let totalPrice = 0 %>
          <% for ( let product of products) {%>
          <%cart_find = cart.find(item => item.id === product.id) %>
          <%totalPrice += (product.prd_price * cart_find.qty) %>
          <tr>
               <td>
                    <h4><%=product.prd_name%></h4>
               </td>
               <td>
                    <p><%=product.prd_accessories%></p>
               </td>
               <td><%=cart_find.qty%></td>
               <td><b><%=product.prd_price * cart_find.qty%>VNĐ</b></td>
          </tr>

          <%}%>
          <div class="row">
                        <div class="cart-total col-lg-2 col-md-2 col-sm-12"><b>Tổng cộng:</b></div>
                        <div class="cart-price col-lg-3 col-md-3 col-sm-12"><b><%=totalPrice%>VNĐ</b></div>
          </div>

     </table>

</body>

</html>