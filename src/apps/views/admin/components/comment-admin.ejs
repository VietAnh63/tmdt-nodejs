<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#"><svg class="glyph stroked home">
                       <use xlink:href="#stroked-home"></use>
                  </svg></a></li>
            <li class="active">Quản lý danh mục</li>
        </ol>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quản lý danh mục</h1>
        </div>
    </div>
    <!--/.row-->
    <div id="toolbar" class="btn-group">
        <a href="category-add.html" class="btn btn-success">
            <i class="glyphicon glyphicon-plus"></i> Thêm danh mục
        </a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <table id="tt" data-toolbar="#toolbar" data-toggle="table" class="display table table-bordered">

                        <thead>
                            <tr>
                                <th data-field="id" data-sortable="true">
                                    <div class="th-inner">ID</div>
                                </th>
                                <th data-field="Cognome">
                                    <div class="th-inner">Tên sản phẩm</div>
                                </th>
                                <th data-field="Cognome">
                                    <div class="th-inner">Bình Luận</div>
                                </th>
                                <th data-field="Cognome">
                                    <div class="th-inner">Tác vụ</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach((product, index)=>{ %>
                                <tr>
                                    <td style="">
                                        <%=index+1%>
                                    </td>
                                    <td style=""><span class="label label-warning"><%=product.prd_name%></span></td>
                                    <td style="">
                                        <%product.comments.forEach((comment, ind) => {%>
                                            <div>
                                                <span class="label label-info"><%= comment.info.email%></span>
                                                <span class="label label-danger">==></span>
                                                <span class="label label-success"><%= comment.content%></span>
                                            </div>
                                            <%})%>

                                    </td>
                                    <td class="form-group">
                                        <a href="/" class="btn btn-primary"><i
                                              class="glyphicon glyphicon-pencil"></i></a>
                                        <a href="/" class="btn btn-danger"><i
                                              class="glyphicon glyphicon-remove"></i></a>
                                    </td>
                                </tr>
                                <%}) %>

                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <% if(page > 1){ %>
                                <li class="page-item">
                                    <a data-page="<%= page-1%>" class="page-link" href="#">back</a>
                                </li>
                                <%}%>
                                    <% range.map((i)=>{ %>
                                        <li class="page-item <%= page === i ? " active ": " " %>">
                                            <% if(i === "...") {%>
                                                <span class="page-link"><%=i%></span>
                                                <%} else {%>
                                                    <a data-page="<%=i%>" class="page-link" href="#">
                                                        <%=i%>
                                                    </a>
                                                    <% } %>
                                        </li>
                                        <%})%>
                                            <% if(page < totalPages){ %>
                                                <li class="page-item">
                                                    <a class="page-link" data-page="<%=page+1%>" href="#">Next</a>
                                                </li>
                                                <%}%>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!--/.row-->
</div>