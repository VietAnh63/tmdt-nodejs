                                <div class="col-sm-3 col-lg-5 widget-left">
                                    <svg class="glyph stroked app-window-with-content">
                                   <use xlink:href="#stroked-app-window-with-content"></use>
                              </svg>
                                </div>
                                <div class="col-sm-9 col-lg-7 widget-right">
                                    <div class="large">25.2k</div>
                                    <div class="text-muted">Quảng Cáo</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>
                    <input type="text" id="cat_label" value="<%=cat_label%>" hidden />
                    <input type="text" id="num_data" value="<%=num_data%>" hidden />
                    <div class="col-xs-6 col-md-6 col-md-6">
                        <canvas id="myChart" width="900" height="400"></canvas>
                        <script type="text/javascript">
                            var cat_label = document.getElementById('cat_label').value
                            var arr_label = cat_label.split(',')
                            var num_data = document.getElementById('num_data').value
                            var arr_num = num_data.split(',')
                            var ctx = document.getElementById("myChart");
                            var o = Math.round,
                                r = Math.random,
                                s = 255;
                            var backgroundColor = []
                            var borderColor = []
                            for (var i = 0; i < arr_label.length; i++) {
                                backgroundColor[i] = 'rgba(' + o(r() * s) + ',' + o(r() * s) + ',' + o(r() * s) + ',' + 0.7 + ')'
                                borderColor[i] = 'rgba(255,99,132,1)'
                            }

                            var myChart = new Chart(ctx, {
                                type: 'bar',
                                data: {
                                    labels: arr_label,
                                    datasets: [{
                                        label: 'Thống kê số lượng danh mục',
                                        data: arr_num,
                                        backgroundColor: backgroundColor,
                                        borderColor: borderColor,
                                        borderWidth: 1
                                    }]
                                },
                                options: {
                                    scales: {
                                        yAxes: [{
                                            ticks: {
                                                beginAtZero: true
                                            }
                                        }]
                                    }
                                }
                            });
                        </script>

                    </div>
                    <div class="col-xs-6 col-md-6 col-md-6">
                        <canvas id="myChart_pie" width="900" height="400"></canvas>
                        <script type="text/javascript">
                            var ctx = document.getElementById("myChart_pie");
                            var myChart_pie = new Chart(ctx, {
                                type: 'doughnut',
                                data: {
                                    labels: arr_label,
                                    datasets: [{
                                        label: 'Thống kê số lượng danh mục',
                                        data: arr_num,
                                        backgroundColor: backgroundColor,
                                        borderColor: borderColor,
                                        borderWidth: 1
                                    }]
                                },
                                options: {
                                    scales: {
                                        yAxes: [{
                                            ticks: {
                                                beginAtZero: true
                                            }
                                        }]
                                    }
                                }
                            });
                        </script>

                    </div>



