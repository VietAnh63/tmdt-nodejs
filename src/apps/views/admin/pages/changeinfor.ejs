<%- include("../layout/header") %>

    <%- include("../layout/sidebar") %>
        <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
            <div class="row">
                <ol class="breadcrumb">
                    <li><a href="#"><svg class="glyph stroked home">
                              <use xlink:href="#stroked-home"></use>
                         </svg></a></li>
                    <li><a href="">Thông tin tài khoản</a></li>
                    <li class="active">
                        <%=user.user_fullname%>
                    </li>
                </ol>
            </div>
            <!--/.row-->

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Thành viên:
                        <%=user.user_fullname%>
                    </h1>
                </div>
            </div>
            <!--/.row-->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="col-md-8">
                                <% if(error){%>
                                    <div class="alert alert-danger">
                                        <%=error%>
                                    </div>
                                    <%}%>
                                        <form role="form" method="post">
                                            <div class="form-group">
                                                <label>Họ & Tên</label>
                                                <input type="text" name="user_fullname" required class="form-control" value="<%=user.user_fullname%>" placeholder="">
                                            </div>
                                            <div class="form-group">
                                                <label>Email</label>
                                                <input type="text" name="user_mail" required value="<%=user.user_mail%>" class="form-control">
                                            </div>


                                            <div>
                                                <button id="hide_show" style="margin-bottom: 7px; background-color:#008CBA; text-align: center; color:white"><i style="margin-right: 5px;" class="glyphicon glyphicon-new-window"></i>Đổi mật khẩu</button>

                                                <div id="form_pass">
                                                    <div class="form-group">
                                                        <label>Mật khẩu cũ</label>
                                                        <input required name="old_user_pass" type="password" class="form-control">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Mật khẩu mới</label>
                                                        <input required name="new_user_pass" type="password" class="form-control">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Nhập lại mật khẩu</label>
                                                        <input required name="user_re_pass" type="password" class="form-control">
                                                    </div>
                                                </div>
                                            </div>

                                            <button type="submit" name="sbm" class="btn btn-primary">Cập nhật</button>
                                            <button type="reset" class="btn btn-default">Làm mới</button>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.col-->
            </div>
            <!-- /.row -->

        </div>
        <!--/.main-->
        <script>
            function getRequestChangePass() {
                $.ajax({
                    method: "POST",
                    url: "/infor-user/<%=user._id%>",
                    data: {
                        data: '123'
                    },
                })
            }

            function getRequestChangePass_1() {
                $.ajax({
                    method: "POST",
                    url: "/infor-user/<%=user._id%>",
                    data: {
                        data: '321'
                    },
                })
            }

            $(document).ready(function() {

                $("#form_pass").hide()
                if ($("#form_pass").is(":hidden") == true) {
                    getRequestChangePass()
                }
                //getRequestChangePass()
                $("#hide_show").click(function() {
                    $("#form_pass").toggle("slow", function() {
                        if ($("#form_pass").is(":hidden") == true) {
                            getRequestChangePass()
                        } else {
                            getRequestChangePass_1()
                        }
                    });
                });
            });
        </script>

        <%- include("../layout/footer") %>